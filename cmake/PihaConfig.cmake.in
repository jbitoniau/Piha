# Defines the list of dependency libs this project relies on
SET( DEPENDENCY_LIB_NAMES @DEPENDENCY_LIB_NAMES@ )
SET( DEPENDENCY_DIRS @DEPENDENCY_DIRS@ )

# Automatically find these dependency packages 
SET( INITIAL_CMAKE_PREFIX_PATH ${CMAKE_PREFIX_PATH} )
SET( CMAKE_PREFIX_PATH "${INITIAL_CMAKE_PREFIX_PATH};${DEPENDENCY_DIRS}" )
FOREACH( DEPENDENCY_LIB_NAME ${DEPENDENCY_LIB_NAMES} )
	# MESSAGE("Finding package ${DEPENDENCY_LIB_NAME}")
	FIND_PACKAGE( ${DEPENDENCY_LIB_NAME} CONFIG REQUIRED )
ENDFOREACH()
SET( CMAKE_PREFIX_PATH ${INITIAL_CMAKE_PREFIX_PATH} )

SET( TARGET_NAME Piha )
INCLUDE( ${CMAKE_CURRENT_LIST_DIR}/${TARGET_NAME}Targets.cmake )
SET( ${TARGET_NAME}_INCLUDE_DIRS ${CMAKE_CURRENT_LIST_DIR}/../../../include )
#SET( ${TARGET_NAME}_LIBRARIES ${CMAKE_CURRENT_LIST_DIR}/../../${TARGET_NAME} )	 # Not needed. Importing the target will automatically TARGET_LINK_LIBRARIES it and its dependencies


